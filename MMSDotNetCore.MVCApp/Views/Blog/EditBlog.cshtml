@model BlogModel
<h2>Edit Blog</h2>
<form action="/blog/Update/@Model.BlogId" method="post">
    <div class="mb-3 row">
        <label class="col-sm-2 col-form-label" >Blog Title</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" value="@Model.BlogTitle" name="BlogTitle">
        </div>
    </div>
    <div class="mb-3 row">
        <label class="col-sm-2 col-form-label">Blog Author</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" value="@Model.BlogAuthor" name="BlogAuthor">
        </div>
    </div>
    <div class="mb-3 row">
        <label class="col-sm-2 col-form-label">Blog Content</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" value="@Model.BlogContent" name="BlogContent">
        </div>
    </div>
    <a href="/Blog" class="btn btn-secondary">Cancel</a>
    <button type="submit" class="btn btn-primary">Update</button>
</form>